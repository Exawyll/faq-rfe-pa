# Local development - use in-memory database (no GCP needed)
USE_MOCK_DB=true

# GCP Project (not needed if USE_MOCK_DB=true)
GCP_PROJECT_ID=your-project-id

# Admin password (change this!)
ADMIN_PASSWORD=your-secure-password-here

# App URL (used in email notifications)
APP_URL=https://your-app-url.run.app

# Email notifications (optional - leave empty to disable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=your-email@gmail.com
